% This package sets up the format of an article document in preparation for publication in the Proceedings on Meetings in Acoustics (POMA)
%
% Prepared by Michael Muhlestein (07 October 2016)
\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{poma_style}
  [2011/01/11 v0.01 LaTeX package for POMA preparation]

% Set page margins and paragraph lengths
\RequirePackage[top=1in, bottom=1in, left=1in, right=1in]{geometry}
\RequirePackage{indentfirst}

% Use Times New Roman
\RequirePackage{times}

% Set header and footer formats
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{2pt}
\renewcommand{\footrulewidth}{2pt}
\renewcommand{\headrule}{\hbox to\headwidth{%
    \color{ASAblue}\leaders\hrule height \headrulewidth\hfill}}
\renewcommand{\footrule}{\hbox to\headwidth{%
    \color{ASAblue}\leaders\hrule height \headrulewidth\hfill}}

% Set section title formats
\RequirePackage[explicit]{titlesec}
\RequirePackage{xcolor}

\definecolor{ASAblue}{RGB}{51,51,153}
\titleformat{\section}
  {\large}{\color{ASAblue}\textbf{\thesection.}}{1em}{\color{ASAblue}\textbf{\MakeUppercase{#1}}}
\titleformat{\subsection}
  {\normalsize}{\color{ASAblue}\textbf{\thesubsection.}}{1em}{\color{ASAblue}\textbf{\MakeUppercase{#1}}}
\titleformat{\subsubsection}
  {\normalsize}{\color{ASAblue}\textbf{\thesubsubsection.}}{1em}{\color{ASAblue}\textbf{#1}}

% No page numbers
%\pagenumbering{gobble}

% Set citation and bibliography styles
\RequirePackage[superscript,biblabel]{cite}

% Set figure and table styles
\RequirePackage[font={it,bf}]{caption}
\renewcommand{\arraystretch}{1.2}

\endinput
